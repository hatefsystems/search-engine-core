        const searchInput = document.getElementById('q');fdsf
        if (searchInput) {
          // Small delay to ensure page is fully loaded
          setTimeout(function() {
            searchInput.focus();
            searchInput.activate();
          }, 100);
        }
      }); #}
    </script>
    
    <script defer src="{{ base_url }}/script.js"></script>
  </body>
</html>
