<!doctype html>
<html lang="{{ t.language.code }}" dir="{{ t.language.direction }}">

<head>
    <meta charset="utf-8">
    <title>{{ t.sponsor.meta_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ t.sponsor.meta_description }}">
    <meta name="robots" content="index,follow">
    <meta name="color-scheme" content="dark light">
    <meta property="og:title" content="{{ t.sponsor.meta_title }}">
    <meta property="og:description" content="{{ t.sponsor.meta_description }}">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ t.sponsor.meta_title }}">
    <meta name="twitter:description" content="{{ t.sponsor.meta_description }}">
    {% if t.language.code == "fa" %}
    <link rel="preload" href="/assets/fonts/vazirmatn/fonts/webfonts/Vazirmatn-FD-Regular.woff2" as="font"
        type="font/woff2" crossorigin>
    <link rel="stylesheet" href="/assets/fonts/vazirmatn/Vazirmatn-FD-font-face.css">
    {% endif %}
    <link rel="stylesheet" href="/sponsor.css">
</head>

<body>
    <a href="#main" class="skip-link">{{ t.sponsor.skip_to_content }}</a>
    <header class="site-header" id="site-header" role="banner">
        <div class="container site-header-inner">
            <!-- Temporarily hidden brand/logo
            <a href="#about" class="brand" aria-label="Hatef home">
                <svg class="wordmark" viewBox="0 0 80 24" aria-hidden="true" focusable="false">
                    <text x="0" y="17" fill="currentColor" font-size="16" font-weight="700"
                        font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, 'Noto Sans'">Hatef</text>
                </svg>
            </a>
            -->
            <nav aria-label="Primary">
                <ul>
                    <!-- Temporarily hidden About navigation
                    <li><a href="#about">{{ t.sponsor.nav_about }}</a></li>
                    -->
                    <li><a href="#tiers">{{ t.sponsor.nav_tiers }}</a></li>
                    <li><a href="#payment">{{ t.sponsor.nav_payment }}</a></li>
                    <li><a href="#faq">{{ t.sponsor.nav_faq }}</a></li>
                    <li><a href="#transparency">{{ t.sponsor.nav_transparency }}</a></li>
                </ul>
            </nav>
            <div class="header-cta">
                <a class="btn btn-outline" href="#payment">{{ t.sponsor.pay_irr_cta }}</a>
                <a class="btn btn-primary" href="#payment">{{ t.sponsor.pay_btc_cta }}</a>
                <button id="themeToggle" class="icon-btn" type="button" aria-pressed="false"
                    aria-label="Switch to dark mode" title="Toggle theme">ðŸŒ™</button>
            </div>
        </div>
    </header>

    <main id="main" tabindex="-1">
        <section id="about" class="hero">
            <div class="container">
                <h1>{{ t.sponsor.hero_title }}</h1>
                <p class="muted">{{ t.sponsor.hero_subtext }}</p>
                <div class="hero-actions">
                    <a class="btn btn-primary btn-lg" href="#payment">{{ t.sponsor.pay_irr_cta }}</a>
                    <a class="btn btn-outline btn-lg" href="#payment">{{ t.sponsor.pay_btc_cta }}</a>
                </div>
                <figure class="founder-note" aria-label="Founder's note">
                    <blockquote>
                        <p>{{ t.sponsor.founder_p1 }}</p>
                        <p>{{ t.sponsor.founder_p2 }}</p>
                    </blockquote>
                    <figcaption>â€” {{ t.sponsor.founder_signature }}</figcaption>
                </figure>
            </div>
        </section>

        <section id="tiers" class="section">
            <div class="container">
                <h2>{{ t.sponsor.tiers_title }}</h2>
                <p class="muted">{{ t.sponsor.tiers_subtitle }}</p>
                <div class="tiers-grid" id="tiersGrid" aria-live="polite" aria-busy="false"
                    data-copy="{{ t.sponsor.copy }}" data-copied="{{ t.sponsor.copied }}"
                    data-copyFailed="{{ t.sponsor.copy_failed }}" data-selectTier="{{ t.sponsor.select_tier }}"
                    data-inKind="{{ t.sponsor.in_kind }}">
                    {% for tier in t.sponsor.tiers %}
                    <article class="card{% if tier.initiallyVisible == false %} hide extra-tier{% endif %}"
                        id="{{ tier.id }}">
                        <div class="tier-anchor"><a href="#{{ tier.id }}" aria-label="Link to {{ tier.name }}">#{{
                                tier.id }}</a></div>
                        <h3>{{ tier.name }}</h3>
                        <div class="price">
                            {% if tier.priceUsdYear > 0 %}
                            {{ t.sponsor.currency_prefix }}{% if tier.priceUsdYearFmt %}{{ tier.priceUsdYearFmt }}{%
                            else %}{{ tier.priceUsdYear }}{% endif %}{{ t.sponsor.currency_suffix }}<span class="per">{{
                                t.sponsor.per_year }}</span>
                            {% if tier.priceUsdMonth %} <span class="note">({{ t.sponsor.currency_prefix }}{% if
                                tier.priceUsdMonthFmt %}{{ tier.priceUsdMonthFmt }}{% else %}{{ tier.priceUsdMonth }}{%
                                endif %}{{ t.sponsor.currency_suffix }}{{ t.sponsor.per_month }})</span>{% endif %}
                            {% if tier.priceNote and tier.priceNote != "" %} <span class="note">({{ tier.priceNote
                                }})</span>{% endif %}
                            {% else %}
                            <span class="note">{% if tier.priceNote and tier.priceNote != "" %}{{ tier.priceNote }}{%
                                else %}{{ t.sponsor.in_kind }}{% endif %}</span>
                            {% endif %}
                        </div>
                        <ul class="benefits">
                            {% for b in tier.benefits %}
                            <li><svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                </svg>{{ b }}</li>
                            {% endfor %}
                        </ul>
                        <div>
                            {% if tier.id == "individual" %}
                            <!-- Individual sponsor tier with three payment options -->
                            <div class="payment-options">
                                <a class="btn btn-primary" href="https://vandar.io/request/NFXVJK8S1N" target="_blank"
                                    rel="noopener">
                                    Ù¾Ø±Ø¯Ø§Ø®Øª Ø³Ø§Ù„Ø§Ù†Ù‡
                                </a>
                                <a class="btn btn-outline" href="https://vandar.io/request/4J4PYJV6XG" target="_blank"
                                    rel="noopener">
                                    Ù¾Ø±Ø¯Ø§Ø®Øª Ù…Ø§Ù‡Ø§Ù†Ù‡
                                </a>
                                <a class="btn btn-outline" href="https://vandar.io/request/ZTKCEQWYJ3" target="_blank"
                                    rel="noopener">
                                    Ù…Ø¨Ù„Øº Ø¯Ù„Ø®ÙˆØ§Ù‡
                                </a>
                            </div>
                            {% else %}
                            <a class="btn btn-primary" href="#payment" data-tier="{{ tier.id }}">{% if tier.cta %}{{
                                tier.cta }}{% else %}{{ t.sponsor.sponsor_now }}{% endif %}</a>
                            {% endif %}
                        </div>
                    </article>
                    {% endfor %}
                </div>
                <div class="see-all"><a href="#tiers" class="btn btn-outline" id="seeAllTiers">{{
                        t.sponsor.see_all_tiers }}</a></div>
            </div>
        </section>

        <section id="payment" class="section" aria-labelledby="payment-title">
            <div class="container">
                <h2 id="payment-title">{{ t.sponsor.payment_title }}</h2>
                <div class="payment-ctas">
                    <div class="cta-box">
                        <h3>{{ t.sponsor.pay_irr_title }}</h3>
                        <p class="muted">{{ t.sponsor.pay_irr_desc }}</p>
                        <div class="cta-actions">
                            <a class="btn btn-primary" href="#pay-irr" data-open="irr-modal">
                                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path fill="currentColor"
                                        d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 2.18L19 6v5c0 4.66-3.2 8.96-7 10-3.8-1.04-7-5.34-7-10V6l7-2.82z" />
                                </svg>
                                {{ t.sponsor.pay_irr_cta }}
                            </a>
                        </div>
                        <p class="legal-note">{{ t.sponsor.legal_note }}</p>
                    </div>
                    <div class="cta-box">
                        <h3>{{ t.sponsor.pay_btc_title }}</h3>
                        <p class="muted">{{ t.sponsor.pay_btc_desc }}</p>
                        <div class="cta-actions">
                            <a class="btn btn-outline" href="#pay-btc" data-open="btc-modal">
                                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path fill="currentColor"
                                        d="M12 2a10 10 0 100 20 10 10 0 000-20zm.7 4.5c1.7 0 3.5.9 3.5 2.8 0 1.2-.6 2-1.6 2.5 1.4.4 2.2 1.4 2.2 2.9 0 2.1-1.8 3.3-4.2 3.3H11v1.6H9.9v-1.6H8v-1.2h1.9v-2.5H8v-1.2h1.9V7.3H8V6.1h1.9V4.5H11v1.6h1.7zm-.9 1.2h-1v3.9h1.2c1.2 0 2.2-.5 2.2-1.9 0-1.3-1-2-2.4-2zm.3 5.1H10.8v4.1H12c1.4 0 2.7-.6 2.7-2.1 0-1.6-1.2-2-2.6-2z" />
                                </svg>
                                {{ t.sponsor.pay_btc_cta }}
                            </a>
                        </div>
                        <p class="legal-note">{{ t.sponsor.legal_note }}</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="faq" class="section">
            <div class="container">
                <h2>{{ t.sponsor.faq_title }}</h2>
                <div class="accordion" id="faqAcc">
                    <div class="acc-item" aria-expanded="false">
                        <button class="acc-btn" aria-controls="faq1" aria-expanded="false">{{ t.sponsor.faq_q1 }}<span
                                aria-hidden="true">â–¾</span></button>
                        <div id="faq1" class="acc-panel">{{ t.sponsor.faq_a1 }}</div>
                    </div>
                    <div class="acc-item" aria-expanded="false">
                        <button class="acc-btn" aria-controls="faq2" aria-expanded="false">{{ t.sponsor.faq_q2 }}<span
                                aria-hidden="true">â–¾</span></button>
                        <div id="faq2" class="acc-panel">{{ t.sponsor.faq_a2 }}</div>
                    </div>
                    <div class="acc-item" aria-expanded="false">
                        <button class="acc-btn" aria-controls="faq3" aria-expanded="false">{{ t.sponsor.faq_q3 }}<span
                                aria-hidden="true">â–¾</span></button>
                        <div id="faq3" class="acc-panel">{{ t.sponsor.faq_a3 }}</div>
                    </div>
                    <div class="acc-item" aria-expanded="false">
                        <button class="acc-btn" aria-controls="faq4" aria-expanded="false">{{ t.sponsor.faq_q4 }}<span
                                aria-hidden="true">â–¾</span></button>
                        <div id="faq4" class="acc-panel">{{ t.sponsor.faq_a4 }}</div>
                    </div>
                </div>
            </div>
        </section>

        <section id="transparency" class="section">
            <div class="container">
                <h2>{{ t.sponsor.transparency_title }}</h2>
                <div class="stack">
                    <p class="muted">{{ t.sponsor.transparency_paragraph }}</p>
                    <!-- Temporarily hidden transparency buttons
                    <div class="cta-actions">
                        <a class="btn btn-primary" href="#">{{ t.sponsor.transparency_financial_cta }}</a>
                        <a class="btn btn-outline" href="#">{{ t.sponsor.transparency_charter_cta }}</a>
                    </div>
                    -->
                </div>
            </div>
        </section>
    </main>

    <footer role="contentinfo">
        <div class="container footer-container">
            <div>Â© <span id="year"></span> Hatef</div>
            <nav aria-label="Footer">
                <a href="https://github.com/hatefsystems/search-engine-core" target="_blank" rel="noopener">GitHub</a>
                <!-- Temporarily hidden footer links
                Â· <a href="#">{{ t.sponsor.footer_terms }}</a>
                Â· <a href="#">{{ t.sponsor.footer_privacy }}</a>
                -->
                Â· <a href="mailto:sponsors@hatef.ir">sponsors@hatef.ir</a>
            </nav>
        </div>
    </footer>

    <!-- IRR Modal -->
    <dialog id="irr-modal" class="modal" aria-modal="true" aria-labelledby="irr-title" aria-describedby="irr-desc">
        <div class="modal-backdrop" data-close></div>
        <div class="modal-card" role="dialog">
            <div class="modal-header">
                <h3 id="irr-title" class="modal-title">{{ t.sponsor.irr_modal_title }}</h3>
                <button class="modal-close" type="button" data-close aria-label="Close">âœ•</button>
            </div>
            <p id="irr-desc" class="muted">{{ t.sponsor.irr_modal_desc }}</p>
            <form class="form-grid" id="irrForm">
                <label>
                    {{ t.sponsor.irr_form_name_label }}
                    <input type="text" name="name" autocomplete="name" required>
                </label>
                <label>
                    {{ t.sponsor.irr_form_email_label }}
                    <input type="email" name="email" autocomplete="email" required>
                </label>
                <label>
                    {{ t.sponsor.irr_form_mobile_label }}
                    <input type="tel" name="mobile" autocomplete="tel-national" required>
                </label>
                <label>
                    {{ t.sponsor.irr_form_company_label }}
                    <input type="text" name="company" autocomplete="organization">
                </label>
                <label>
                    {{ t.sponsor.irr_form_tier_label }}
                    <select name="tier" id="tierSelect" required>
                        <option value="" disabled selected>{{ t.sponsor.select_tier }}</option>
                        {% for tier in t.sponsor.tiers %}
                        <option value="{{ tier.id }}">
                            {{ tier.name }} â€”
                            {% if tier.priceUsdYear > 0 %}
                            {{ t.sponsor.currency_prefix }}{% if tier.priceUsdYearFmt %}{{ tier.priceUsdYearFmt }}{%
                            else %}{{ tier.priceUsdYear }}{% endif %}{{ t.sponsor.currency_suffix }}{{
                            t.sponsor.per_year }}
                            {% else %}
                            {% if tier.priceNote and tier.priceNote != "" %}{{ tier.priceNote }}{% else %}{{ t.sponsor.in_kind }}{% endif %}
                            {% endif %}
                        </option>
                        {% endfor %}
                    </select>
                </label>
                <label >
                    {{ t.sponsor.irr_form_amount_label }}
                    <input type="number" name="amount" inputmode="numeric" min="0" step="1" placeholder="e.g., 50000000"
                        required>
                </label>

                <label>
                    {{ t.sponsor.irr_form_landline_label }}
                    <input type="tel" name="landline" autocomplete="tel">
                </label>
                <label>
                    {{ t.sponsor.irr_form_extension_label }}
                    <input type="text" name="extension" placeholder="ext">
                </label>
                <fieldset >
                    <legend>{{ t.sponsor.irr_form_call_time_label }}</legend>
                    <div class="choices-row">
                        <label class="choice">
                            <div><input type="radio" name="call_time" value="anytime" checked></div>
                            <span>{{ t.sponsor.irr_form_call_anytime }}</span>
                        </label>
                        <label class="choice">
                            <div><input type="radio" name="call_time" value="specific" id="specificTimeRadio"></div>
                            <span>{{ t.sponsor.irr_form_call_specific }}</span>
                        </label>
                    </div>
                </fieldset>
                <label id="specificTimeField">
                    {{ t.sponsor.irr_form_specific_time_label }}
                    <input type="text" name="specific_time" placeholder="e.g., 9AM-5PM weekdays">
                </label>
                <div class="full form-actions">
                    <button class="btn btn-primary" type="submit">{{ t.sponsor.irr_form_request_link_btn }}</button>
                    <button class="btn btn-outline" type="button" data-close>{{ t.sponsor.irr_form_cancel_btn
                        }}</button>
                </div>
            </form>
            <p class="legal-note">{{ t.sponsor.legal_note }}</p>
        </div>
    </dialog>

    <!-- BTC Modal -->
    <dialog id="btc-modal" class="modal" aria-modal="true" aria-labelledby="btc-title" aria-describedby="btc-desc">
        <div class="modal-backdrop" data-close></div>
        <div class="modal-card" role="dialog">
            <div class="modal-header">
                <h3 id="btc-title" class="modal-title">{{ t.sponsor.pay_btc_title }}</h3>
                <button class="modal-close" type="button" data-close aria-label="Close">âœ•</button>
            </div>
            <div id="btc-desc" class="btc-box">
                <div class="qr" aria-hidden="true">
                    <img src="bitcoin-wallet.png" alt="Bitcoin QR Code" width="120" height="120" style="border-radius: 12px;">
                </div>
                <div>
                    <p class="muted">{{ t.sponsor.btc_modal_desc }}</p>
                    <div class="addr">
                        <strong>{{ t.sponsor.btc_address_label }}</strong>
                        <code id="btcAddr" class="mono">3LpRgxXxAJDgRcHF6w1jpobRnPPyQYPQJf</code>
                        <button class="btn btn-outline" id="copyBtc">{{ t.sponsor.copy }}</button>
                    </div>
                </div>
            </div>
            <p class="legal-note">{{ t.sponsor.legal_note }}</p>
        </div>
    </dialog>

    <script src="/sponsor.js" defer></script>
</body>

</html>