{
  "name": "search-engine-core",
  "version": "1.0.0",
  "description": "Search Engine Core",
  "scripts": {
    "format": "prettier --write \"docs/**/*.{json,md}\" \"*.{json,md}\" \"config/.prettierrc.json\"",
    "format:check": "prettier --check \"docs/**/*.{json,md}\" \"*.{json,md}\" \"config/.prettierrc.json\"",
    "validate-schema": "node scripts/validate-schema.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "docs/**/*.{json,md}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "config/.prettierrc.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.1.0"
  }
}
